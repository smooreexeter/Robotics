#pragma config(Motor,  port1,           hMotor,        tmotorVex393_HBridge, openLoop)
#pragma config(Motor,  port2,           servo,         tmotorServoStandard, openLoop)
//*!!Code automatically generated by 'ROBOTC' configuration wizard               !!*//

void wait(int time){
	wait1Msec(time);
}

void slowServo(int final, int speed){

	int curSpeed = motor[servo];
	if(motor[servo] > final){
		while(motor[servo] > final){
			curSpeed += sgn(final) *  speed;
			motor[servo] = curSpeed;
			wait(50);
		}
	}else{
		while(motor[servo] < final){
			curSpeed += sgn(final) *  speed;
			motor[servo] = curSpeed;
			wait(50);
		}
	}

}

task main()
{

	motor[servo] = 127;
	wait10Msec(100);
	motor[hMotor] = 10;
	wait10Msec(500);
	
	slowServo(-127, 5  );
	

}
